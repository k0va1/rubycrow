<%# locals: (article:) -%>
<a
  href="<%= article.url %>"
  target="_blank"
  rel="noopener"
  class="editorial-card group block rounded-xl p-5"
>
  <div class="relative z-10 flex items-start justify-between gap-4">
    <div class="min-w-0 flex-1">
      <h3 class="truncate font-display text-xl text-crow-cream transition-colors duration-300 group-hover:text-gold">
        <%= article.title %>
      </h3>

      <div class="mt-2 flex items-center gap-3">
        <span class="text-sm font-light text-crow-sand-dim"><%= article.blog.name %></span>

        <% if article.published_at %>
          <span class="text-xs text-crow-sand-dim/50">&middot;</span>
          <time class="text-xs text-crow-sand-dim/50" datetime="<%= article.published_at.iso8601 %>">
            <%= time_ago_in_words(article.published_at) %> ago
          </time>
        <% end %>
      </div>

      <% if article.blog.tags.present? %>
        <div class="mt-3 flex gap-2">
          <% article.blog.tags.first(3).each do |tag| %>
            <span class="rounded border border-gold/10 px-2 py-0.5 text-[0.65rem] tracking-wider text-gold-dim uppercase">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <svg
      class="mt-1.5 h-4 w-4 flex-shrink-0 text-crow-sand-dim/30 transition-colors duration-300 group-hover:text-gold/50"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
      />
    </svg>
  </div>
</a>
