<%# locals: (article:) -%>
<a href="<%= article.url %>" target="_blank" rel="noopener"
   class="block editorial-card rounded-xl p-5 group">
  <div class="relative z-10 flex items-start justify-between gap-4">
    <div class="flex-1 min-w-0">
      <h3 class="font-display text-xl text-crow-cream group-hover:text-gold transition-colors duration-300 truncate">
        <%= article.title %>
      </h3>
      <div class="flex items-center gap-3 mt-2">
        <span class="text-sm text-crow-sand-dim font-light"><%= article.blog.name %></span>
        <% if article.published_at %>
          <span class="text-xs text-crow-sand-dim/50">&middot;</span>
          <time class="text-xs text-crow-sand-dim/50" datetime="<%= article.published_at.iso8601 %>">
            <%= time_ago_in_words(article.published_at) %> ago
          </time>
        <% end %>
      </div>
      <% if article.blog.tags.present? %>
        <div class="flex gap-2 mt-3">
          <% article.blog.tags.first(3).each do |tag| %>
            <span class="text-[0.65rem] tracking-wider uppercase text-gold-dim border border-gold/10 rounded px-2 py-0.5"><%= tag %></span>
          <% end %>
        </div>
      <% end %>
    </div>
    <svg class="w-4 h-4 text-crow-sand-dim/30 group-hover:text-gold/50 transition-colors duration-300 flex-shrink-0 mt-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
    </svg>
  </div>
</a>
