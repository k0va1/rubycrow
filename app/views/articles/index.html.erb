<%= turbo_frame_tag "live-feed" do %>
  <% if @articles.any? %>
    <div class="space-y-4">
      <% @articles.each do |article| %>
        <%= render "articles/article", article: article %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-crow-sand-dim text-lg font-light">No articles yet. The crow is still watching.</p>
    </div>
  <% end %>
<% end %>
