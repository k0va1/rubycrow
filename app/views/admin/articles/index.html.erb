<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="admin-heading text-2xl font-semibold">Articles</h1>
    <p class="admin-subtext mt-1 text-sm"><%= @pagy.count %> articles total</p>
  </div>

  <div class="flex items-center gap-3">
    <div data-controller="search-form">
      <%= lui.input(
        name: :search,
        label: false,
        placeholder: "Search by title...",
        value: @search,
        input_data: {
          search_form_target: "input",
          action: "input->search-form#search"
        }
      ) %>
    </div>

    <div data-controller="auto-submit">
      <%= lui.select(
        name: :period,
        label: false,
        options_for_select: options_for_select(
          [["All time", ""], ["Last week", "last_week"], ["Last 2 weeks", "last_2_weeks"], ["Last month", "last_month"]],
          @period
        ),
        select_data: { action: "change->auto-submit#submit" }
      ) %>
    </div>

    <%= lui.button(url: new_admin_article_path, icon: "plus") { "New Article" } %>
  </div>
</div>

<% if @articles.any? %>
  <%= lui.table(data: @articles) do |table| %>
    <% table.with_column("Title") { |article| link_to truncate(article.title, length: 50), admin_article_path(article) } %>
    <% table.with_column("Blog") { |article| link_to article.blog.name, admin_blog_path(article.blog) } %>
    <% table.with_column("Published At") { |article| article.published_at&.strftime("%b %d, %Y") || "â€”" } %>

    <% table.with_column("Processed") do |article| %>
      <% if article.processed? %>
        <%= lui.badge(status: :success) { "Yes" } %>
      <% else %>
        <%= lui.badge(status: :warning) { "No" } %>
      <% end %>
    <% end %>

    <% table.with_action { |article| link_to "Edit", edit_admin_article_path(article) } %>
    <% table.with_action { |article| link_to "Delete", admin_article_path(article), data: { turbo_method: :delete, turbo_confirm: "Delete this article?" } } %>
  <% end %>
  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="admin-card py-12 text-center">
    <p class="admin-subtext mb-4 text-sm">No articles yet</p>
    <%= lui.button(url: new_admin_article_path, icon: "plus") { "Add your first article" } %>
  </div>
<% end %>
