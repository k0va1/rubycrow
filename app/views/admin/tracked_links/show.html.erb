<div class="mb-2">
  <%= link_to "← Tracked Links", admin_tracked_links_path, class: "text-sm text-zinc-500 hover:text-zinc-700" %>
</div>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold text-zinc-950">Tracked Link: <%= @tracked_link.token %></h1>
  <div class="flex gap-2">
    <%= lui.button(url: edit_admin_tracked_link_path(@tracked_link), style: :outline) { "Edit" } %>
    <%= link_to "Delete", admin_tracked_link_path(@tracked_link), data: { turbo_method: :delete, turbo_confirm: "Delete this tracked link?" }, class: "inline-flex items-center rounded-lg px-3 py-2 text-sm font-medium text-red-600 hover:bg-red-50" %>
  </div>
</div>

<%= lui.description_list do |list| %>
  <% list.with_item(label: "Token", value: @tracked_link.token) %>
  <% list.with_item(label: "Destination URL") do %>
    <%= link_to @tracked_link.destination_url, @tracked_link.destination_url, target: "_blank", rel: "noopener noreferrer" %>
  <% end %>
  <% list.with_item(label: "Newsletter Issue") do %>
    <%= link_to "##{@tracked_link.newsletter_issue.issue_number}", admin_newsletter_issue_path(@tracked_link.newsletter_issue) %>
  <% end %>
  <% list.with_item(label: "Article") do %>
    <% if @tracked_link.article %>
      <%= link_to @tracked_link.article.title, admin_article_path(@tracked_link.article) %>
    <% else %>
      —
    <% end %>
  <% end %>
  <% list.with_item(label: "Section", value: @tracked_link.section || "—") %>
  <% list.with_item(label: "Position", value: @tracked_link.position_in_newsletter || "—") %>
  <% list.with_item(label: "Total Clicks", value: @tracked_link.total_clicks) %>
  <% list.with_item(label: "Unique Clicks", value: @tracked_link.unique_clicks) %>
  <% list.with_item(label: "Clicks") do %>
    <%= link_to "View clicks", admin_clicks_path(tracked_link_id: @tracked_link.id) %>
  <% end %>
<% end %>
