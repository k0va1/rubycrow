<div class="mb-2"><%= link_to "← Tracked Links", admin_tracked_links_path, class: "text-sm admin-link-back" %></div>

<div class="mb-6 flex items-center justify-between">
  <h1 class="admin-heading text-2xl font-semibold">Tracked Link: <%= @tracked_link.token %></h1>

  <div class="flex gap-2">
    <%= lui.button(url: edit_admin_tracked_link_path(@tracked_link), style: :outline) { "Edit" } %>
    <%= link_to "Delete", admin_tracked_link_path(@tracked_link), data: { turbo_method: :delete, turbo_confirm: "Delete this tracked link?" }, class: "inline-flex items-center rounded-lg px-3 py-2 text-sm font-medium admin-delete-btn" %>
  </div>
</div>

<%= lui.description_list do |list| %>
  <% list.with_item(label: "Token", value: @tracked_link.token) %>

  <% list.with_item(label: "Destination URL") do %>
    <%= link_to @tracked_link.destination_url, safe_external_url(@tracked_link.destination_url), target: "_blank", rel: "noopener noreferrer" %>
  <% end %>

  <% list.with_item(label: "Linked To") do %>
    <% if @tracked_link.trackable.present? %>
      <%= @tracked_link.trackable_type %>: <%= @tracked_link.trackable.try(:title) || @tracked_link.trackable_id %>
    <% else %>
      —
    <% end %>
  <% end %>

  <% list.with_item(label: "Total Clicks", value: @tracked_link.total_clicks) %>
  <% list.with_item(label: "Unique Clicks", value: @tracked_link.unique_clicks) %>

  <% list.with_item(label: "Clicks") do %>
    <%= link_to "View clicks", admin_clicks_path(tracked_link_id: @tracked_link.id) %>
  <% end %>
<% end %>
