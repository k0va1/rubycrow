<div class="mb-6 flex items-center justify-between">
  <div>
    <h1 class="admin-heading text-2xl font-semibold">Blogs</h1>
    <p class="admin-subtext mt-1 text-sm"><%= @blogs.length %> blogs on this page</p>
  </div>

  <div class="flex items-center gap-3">
    <div data-controller="auto-submit">
      <%= lui.select(
        name: :period,
        label: false,
        options_for_select: options_for_select(
          [["All time", ""], ["Last week", "last_week"], ["Last 2 weeks", "last_2_weeks"], ["Last month", "last_month"]],
          @period
        ),
        select_data: { action: "change->auto-submit#submit" }
      ) %>
    </div>

    <%= lui.button(url: new_admin_blog_path, icon: "plus") { "New Blog" } %>
  </div>
</div>

<% if @blogs.any? %>
  <%= lui.table(data: @blogs) do |table| %>
    <% table.with_column("Name") { |blog| link_to blog.name, admin_blog_path(blog) } %>
    <% table.with_column("URL") { |blog| link_to truncate(blog.url, length: 40), blog.url, target: "_blank", rel: "noopener noreferrer" } %>

    <% table.with_column("Active") do |blog| %>
      <% if blog.active? %>
        <%= lui.badge(status: :success) { "Active" } %>
      <% else %>
        <%= lui.badge(status: :error) { "Inactive" } %>
      <% end %>
    <% end %>

    <% table.with_column("Last Synced") { |blog| blog.last_synced_at&.strftime("%b %d, %Y %H:%M") || "Never" } %>
    <% table.with_action { |blog| link_to "Edit", edit_admin_blog_path(blog) } %>
    <% table.with_action { |blog| link_to "Delete", admin_blog_path(blog), data: { turbo_method: :delete, turbo_confirm: "Delete this blog?" } } %>
  <% end %>
  <%= render "admin/shared/pagination", pagy: @pagy %>
<% else %>
  <div class="admin-card py-12 text-center">
    <p class="admin-subtext mb-4 text-sm">No blogs yet</p>
    <%= lui.button(url: new_admin_blog_path, icon: "plus") { "Add your first blog" } %>
  </div>
<% end %>
