<% form_id = local_assigns[:form_id] || "subscribe-form" %>
<div id="<%= form_id %>">
  <%= form_with url: subscribers_path, method: :post, class: "flex flex-col sm:flex-row gap-3 justify-center items-center max-w-lg mx-auto" do |f| %>
    <%= hidden_field_tag :form_id, form_id %>
    <div class="flex-1 w-full">
      <input type="email" name="email" placeholder="your@email.com" required
        class="subscribe-input w-full px-5 py-3.5 rounded-lg text-crow-cream font-body text-sm tracking-wide" />
    </div>
    <button type="submit"
      class="subscribe-btn px-7 py-3.5 rounded-lg text-white font-body font-medium text-sm tracking-wide cursor-pointer whitespace-nowrap relative z-10">
      Subscribe
    </button>
  <% end %>
  <% if local_assigns[:error] %>
    <p class="mt-3 text-sm text-ruby-light font-body"><%= error %></p>
  <% end %>
</div>
